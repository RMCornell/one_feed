<h1>Welcome#index</h1>
<%= link_to "Signout", destroy_user_session_path, method: :delete %>

<!-- Media Feed -->

<div id="feed">
  <ul class="small-block-grid-3">

    <!-- Twitter Feed Cards -->
<% if twitter_user %>
    <% current_user.twitter_feed.each do |feed_item| %>
        <li>
          <div class="service">
            <div class="service-icon-box">
              <div class="service-icon">
                <%= image_tag feed_item.user.profile_image_url %>
              </div>
            </div>
            <h4 class="service-heading">
              <%= link_to feed_item.user.name, "http://www.twitter.com/" + feed_item.user.screen_name  %>
            </h4>
            <p class="service-description">
              <%= feed_item.text %>
            </p>
          </div>
    <% end %>
    </li>
  </ul>
<% else %>
    <p>NOoooo</p>
        <%= link_to "Authorize Twitter", '/users/auth/twitter' %>

</div>
<% end %>

